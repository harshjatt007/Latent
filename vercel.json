{
  "version": 2,
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/create-order",
      "destination": "/backend/server.js"
    },
    {
      "source": "/fileupload", 
      "destination": "/backend/server.js"
    },
    {
      "source": "/allVideos",
      "destination": "/backend/server.js"
    },
    {
      "source": "/rate",
      "destination": "/backend/server.js"
    },
    {
      "source": "/getVid",
      "destination": "/backend/server.js"
    },
    {
      "source": "/getRankings",
      "destination": "/backend/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/build"
}