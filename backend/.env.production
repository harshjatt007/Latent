# Production Environment Variables
# Make sure to set these in your hosting platform

# MongoDB Configuration (Set your production MongoDB URI)
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/latent-production

# JWT Configuration (Use a strong secret in production)
JWT_SECRET=your_production_jwt_secret_very_long_and_secure

# Session Configuration (Use a strong secret in production)
SESSION_SECRET=your_production_session_secret_very_long_and_secure

# Cloudinary Configuration (Production credentials)
CLOUDINARY_CLOUD_NAME=your_production_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_production_cloudinary_api_key
CLOUDINARY_API_SECRET=your_production_cloudinary_api_secret

# Google OAuth Configuration (Production credentials)
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret

# Razorpay Configuration (Production credentials)
RAZORPAY_KEY_ID=your_production_razorpay_key_id
RAZORPAY_KEY_SECRET=your_production_razorpay_key_secret

# Server Configuration
PORT=5000
NODE_ENV=production

# Frontend URL for CORS (Production domain)
FRONTEND_URL=https://latent-delta.vercel.app